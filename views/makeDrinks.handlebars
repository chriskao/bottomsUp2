<!doctype html>

<html>
<head>
	<title>bottomsUp: Make Drinks</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-switch.css" rel="stylesheet">
	<!-- <link href="/css/bootstrap-theme.min.css" rel="stylesheet"> -->
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href="/css/flat-ui.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<nav class="navbar navbar-default" role="navigation">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
			      <span class="sr-only">Toggle navigation</span>
			    </button>
			    <a class="navbar-brand" href="/">BottomsUp</a>
			  </div>
			  <div class="collapse navbar-collapse navbar-center" id="navbar-collapse-01">
			    <ul class="nav navbar-nav"> 
			      <li><a href="cabinet">My Cabinet</a></li>
			      <li class="active"><a href="makeDrinks">Make Drinks</a></li>
			    </ul>           
			  </div><!-- /.navbar-collapse -->
	</nav><!-- /navbar -->

	<div class="btn-group-wrap">
			<div class="btn-group" id="custom-navbar">
		<!-- 		<a class="btn btn-primary" href="#fake">Price</a> -->
				<a class="btn btn-primary btn btn-sm" href="/makeDrinks?additional=1">+1 ingr.</a>
				<a class="btn btn-primary btn btn-sm" href="/makeDrinks?additional=2">+2 ingr.</a>
				<a class="btn btn-primary btn btn-sm" href="/makeDrinks?additional=3">+3 ingr.</a>
			</div>
	</div>

	<div class="wrapper">
		<p id="price-title">Sort Mode </p>
		<div class="switch has-switch" id="priceSwitch">
			<!-- <div class="switch-animate switch-off"> -->
			<input type="checkbox" id="sort_switch" checked data-toggle="switch">
			<!-- </div> -->
		</div>
	</div>

	</br>

	<div class="container fitWidth">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<!-- <center><h1>Make Drinks</h1> -->
		<!-- <div class="button-group">
			<button class="btn btn-default navbar-btn" type="button">Price</button>
			<button class="btn btn-default navbar-btn" type="button">+1 ingredients</button>
			<button class="btn btn-default navbar-btn" type="button">+2 ingredients</button>
			<button class="btn btn-default navbar-btn" type="button">+3 ingredients</button>
		</div> -->
		</center>
      	<ul class="list-group" id="priceSortList">
      		{{#if this.price}}
  			{{#each this.price}}
  			{{#if this.drink_name}}
      		<a href="recipe" class="drinks">
				  <li class="list-group-item">
				    <a class="pull-left" href="recipe?id={{this.drink_id}}">
				      <img class="listImage" src="{{this.image_url}}">
				    </a>
				    <div class="media-body">
				      <h5 class="media-heading">{{this.drink_name}} - ${{this.price}}/drink</h5>
				      <p>If you get {{#each this.remainder}} {{this}}, {{/each}} you can make this drink!</p>
				    </div>
				  </li>
			</a>
			{{/if}}
			{{/each}}
			{{else}}
			<h1>No drinks found.</h1>
			{{/if}}
		</ul>
		<ul class="list-group" id="nameSortList">
      		{{#if this.name}}
  			{{#each this.name}}
  			{{#if this.drink_name}}
      		<a href="recipe" class="drinks">
				  <li class="list-group-item">
				    <a class="pull-left" href="recipe?id={{this.drink_id}}">
				      <img class="listImage" src="{{this.image_url}}">
				    </a>
				    <div class="media-body">
				      <h5 class="media-heading">{{this.drink_name}} - ${{this.price}}/drink</h5>
				      <p>If you get {{#each this.remainder}} {{this}}, {{/each}} you can make this drink!</p>
				    </div>
				  </li>
			</a>
			{{/if}}
			{{/each}}
			{{else}}
			<h1>No drinks found.</h1>
			{{/if}}
		</ul>
		<br/>
		<br/>
		<a class="fitWidth" href="cabinet"><button class="btn btn-block btn btn-info">Back to My Cabinet</button></a>
		</br>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="js/jquery-1.8.3.min.js"></script>
    <script src="js/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="js/jquery.ui.touch-punch.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-select.js"></script>
    <script src="js/bootstrap-switch.js"></script>
    <script src="js/flatui-checkbox.js"></script>
    <script src="js/flatui-radio.js"></script>
    <script src="js/jquery.tagsinput.js"></script>
    <script src="js/jquery.placeholder.js"></script>
    <script type="text/javascript">
    	if (location.search.length == 0) {
    		$(".btn").first().button("toggle");
    	}
    	$('#nameSortList').hide();
    	$('#priceSwitch').on('switch-change', function (e, data) {
    	  	var $element = $(data.el);
    	  	// console.log(e, $element, value);
    	  	if($element.parent().hasClass('switch-on')){
    	  		$('#priceSortList').show();
    	  		$('#nameSortList').hide();
    	  	}
    	  	else {
    	  		$('#priceSortList').hide();
    	  		$('#nameSortList').show();
    	  	}
    	});
    	$(".btn").click(function () {
    		$(".btn").removeClass('active');
    		$(this).button("toggle");
    	})
    </script>
</body>
</html>
